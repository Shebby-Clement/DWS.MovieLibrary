@model IEnumerable<DWS.MovieLibrary.Domain.Dtos.MovieDto>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movies</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Movie
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Language
            </th>
            <th>
                Year
            </th>
            <th>
                Rating
            </th>

            <th>
                Country
            </th>
            <th>
                Category
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
<tr>
    <td width="20%">@obj.Name</td>
    <td width="20%">@obj.Language</td>
    <td width="20%">@obj.Year</td>
    <td width="20%">@obj.Rating</td>

    <td width="20%">@Html.Raw(DWS.MovieLibrary.Core.Helpers.OtherHelpers.GetEnumValue<@DWS.MovieLibrary.Domain.Models.Enum.Country>(@obj.Country))</td>
    <td width="20%">@Html.Raw(DWS.MovieLibrary.Core.Helpers.OtherHelpers.GetEnumValue<@DWS.MovieLibrary.Domain.Models.Enum.Category>(@obj.Genre))</td>

    <td class="text-center">
        <div class="w-75 btn-group" role="group">
            <a asp-controller="Movies" asp-route-Id="@obj.ID" asp-action="Edit" class="btn btn-primary mx-2">
                <i class="fas fa-edit"></i>
            </a>

            <a asp-controller="Persons" asp-route-Id="@obj.ID" asp-action="Index" class="btn btn-success mx-2">
                <i class="fas fa-info-circle"></i>
            </a>

            <a asp-controller="Movies" asp-route-Id="@obj.ID" asp-action="DeleteRecord" class="btn btn-danger mx-2">
                <i class="far fa-trash-alt"></i>
            </a>
        </div>
    </td>
</tr>
}
    </tbody>
</table> }
else
{
<p> No Movies exist.</p>}

</div>