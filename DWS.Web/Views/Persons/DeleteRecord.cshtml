@model DWS.MovieLibrary.Domain.Dtos.PersonDto

<div class="header">
    <h2 class="text-center my-5">Movie Library</h2>
</div>

<form method="post" asp-action="DeleteRecord">

    <input asp-for="ID" hidden />
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Person</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" disabled />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" disabled />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="col-8">
                        <td class="form-control">@Html.Raw(DWS.MovieLibrary.Core.Helpers.OtherHelpers.GetEnumValue<@DWS.MovieLibrary.Domain.Models.Enum.Gender>(Model.Gender))</td>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Role"></label>
                    </div>
                    <div class="col-8">
                        <td class="form-control">@Html.Raw(DWS.MovieLibrary.Core.Helpers.OtherHelpers.GetEnumValue<@DWS.MovieLibrary.Domain.Models.Enum.Role>(Model.Role))</td>
                    </div>

                </div>

               

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-list-ul"></i> View Persons</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" /> }

}