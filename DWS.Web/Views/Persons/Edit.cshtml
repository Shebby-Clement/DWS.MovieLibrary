@model DWS.MovieLibrary.Domain.Dtos.PersonDto

<div class="header">
    <h2 class="text-center my-5">Movie Library</h2>
</div>

<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Person</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Gender"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList<DWS.MovieLibrary.Domain.Models.Enum.Gender>()"></select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Role"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="Role" class="form-control" asp-items="@Html.GetEnumSelectList<DWS.MovieLibrary.Domain.Models.Enum.Role>()"></select>
                        </div>

                    </div>


                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MovieList"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="MovieID" class="form-control" asp-items="@(new SelectList(Model.MovieList, "Value", "Text"))">
                                <option value="">--Select--</option>

                            </select>
                        </div>

                    </div>


                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-list-ul"></i> Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" />
    }

}